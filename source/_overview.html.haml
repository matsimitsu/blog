= link_to article.url, {:style => "background-image: url('#{resize('10x', article_header_image_url(article))}')", 'data-bg-src' => article_header_image_url(article)} do
  .heading
    %h1= article.title
    - if article.data.subtitle
      %h2= article.data.subtitle
    - elsif article.data.locations
      %h2= article.data.locations.map{ |l| l['title'] }.join(' - ')

