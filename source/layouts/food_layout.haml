- content_for(:meta) do
  %meta{:property =>"og:site_name",   :content => "http://matsimitsu.com"}
  %meta{:property =>"og:description", :content => "Matsimitsu | #{blog_controller.name} | #{current_article.title}"}
  %meta{:property =>"og:type",        :content => "blog"}
  %meta{:property =>"og:url",         :content => current_article.url}
  %meta{:property =>"og:image",       :content => current_article.data.header}

  - if current_article.data['source']
    %meta{:name =>"original-source", :content => current_article.data['source']}

= wrap_layout :layout do
  = partial(:food, :locals => {:article => current_article})
