!!! 5

%html
  %head
    %meta{:charset => 'utf-8'}
    %meta{:content => 'IE=edge,chrome=1', 'http-equiv' => 'X-UA-Compatible'}

    %meta{:name => "author",    :content => "Robert Beekman"}
    %meta{:name => "publisher", :content => "Robert Beekman"}
    %meta{:name => "copyright", :content => "2015 by Robert Beekman"}
    %meta{:name => "host",      :content => "travel.matsimitsu.com"}
    %meta{:name => "generator", :content => "Middleman App"}

    %meta{:name => "description",   :content => "Matsimitsu | #{blog_controller.name rescue 'Home'}"}
    %meta{:name => "abstract",      :content => "Documenting trips abroad through photography."}
    %meta{:name => "keywords",      :content => "travel, asia, usa, blog"}
    %meta{:name => "revisit-after", :content => "2 days"}
    %link{:rel => 'icon', :type => 'image/png', :href => '/images/icon.png', :sizes => '32x32'}
    = yield_content :meta

    %title Matsimitsu | #{blog_controller.name rescue 'Home'}
    = stylesheet_link_tag 'site'
    = stylesheet_link_tag 'mapbox'
    = stylesheet_link_tag 'syntax'

    = yield_content :head

  %body{:class => page_classes}
    %header#header{:class => %w(blog photoset).include?((blog_controller.name.to_s rescue '')) || current_page.data.site_header == 'dark' ? 'dark' : nil }
      .container
        %hgroup
          %h1= link_to 'Matsimitsu', '/'
          - if (blog_controller rescue false)
            %h2= link_to blog_controller.name, "#{blog_controller.options[:prefix]}/overview"
          - elsif current_page.data.subtitle
            %h2= link_to current_page.data.subtitle, current_page.url

        %nav
          %ul
            %li= link_to 'Home', "/"
            %li= link_to 'Travel', "/travel"
            %li= link_to 'Blog', "/blog"
            %li= link_to 'Photos', "/photoset"

    #main
      = yield

    %footer
      .container
        = yield_content(:footer)

      %p
        &copy; #{Date.today.year} - Robert Beekman - <a href="mailto:hello@matsimitsu.nl"><i class="fa fa-envelope-o"></i></a> -
        <a href="https://github.com/matsimitsu" target="_blank"><i class="fa fa-github"></i></a> -
        <a href="https://twitter.com/matsimitsu" target="_blank"><i class="fa fa-twitter"></i></a> -
        <a href="https://instagram.com/matsimitsu" target="_blank"><i class="fa fa-instagram"></i></a>

    = javascript_include_tag 'jquery'
    = javascript_include_tag 'application'
    = javascript_include_tag 'https://api.tiles.mapbox.com/mapbox.js/v1.6.2/mapbox.js'
